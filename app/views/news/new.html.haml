.card.col-md-6.col-lg-4.col-10.mx-auto.p-0
  .card-header
    New News
  .card-body.px-3
    = simple_form_for @news do |f|
      = f.input :title, wrapper_html: { class: 'form-inline' }, label_html: { class: 'col-sm-3 col-form-label px-0 justify-content-start' }, input_html: { class: 'col-sm-9' }
      = f.input :message
      = f.submit "Add news", class: 'btn btn-primary btn-block'


= link_to 'Sign out', destroy_admin_session_path, method: :delete
